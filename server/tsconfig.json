{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/types/*",
                "*"
            ]
        },
        "types": [
            "reflect-metadata"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "alwaysStrict": true,
        "listEmittedFiles": true
    },
    "files": [
        "src/server.ts"
    ]
}